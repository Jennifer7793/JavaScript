<h1>課程列表</h1>

<%= link_to "新增課程", new_course_path %>

<table>
  <tr>
    <td>Name</td>
    <td>Price</td>
    <td>Intro</td>
    <td>Hour</td>
  </tr>
  <% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.price %></td>
    <td><%= course.intro %></td>
    <td><%= course.hour %></td>
    <td><%= link_to 'edit', edit_course_path(course.id) %></td>
    <td><%= link_to 'delete', course_path(course.id), method: "delete", data: {confirms "Sure to delete?"} %></td>
  </tr>
  <% end %>
</table>